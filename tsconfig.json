{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "rootDir": "src",
    "outDir": "es",
    "newLine": "LF",
    "lib": ["dom", "ES2023"],
    "moduleResolution": "node",
    "strictNullChecks": true,
    "declaration": true,
    "pretty": true,
    "sourceMap": true,
    "inlineSources": true,
    "esModuleInterop": true
  },
  "include": ["src"],
  "exclude": ["src/tests"]
}
